<% if @pictures.any? %>
  <ul>
    <% @pictures.each do |picture| %>
      <li>
        <%= link_to (image_tag picture.image.url(:medium), alt: picture.caption), picture_path(picture) %>
        <%= link_to 'Like', picture_likes_path(picture), class: 'likes-link' %>
        <span class="likes_count"> <%= picture.likes.count %> </span> <%= 'like'.pluralize(picture.likes.count) %>
        <%= picture.caption %>
      </li>
    <% end %>
  </ul>
<% else %>
  No pictures yet
<% end %>